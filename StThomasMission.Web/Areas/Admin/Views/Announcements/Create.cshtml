@model StThomasMission.Web.Areas.Admin.Models.AnnouncementFormViewModel
@{
    ViewData["Title"] = "Create Announcement";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">Create New Announcement</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <partial name="_AnnouncementForm" model="Model" />
            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-primary">Create Announcement</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}