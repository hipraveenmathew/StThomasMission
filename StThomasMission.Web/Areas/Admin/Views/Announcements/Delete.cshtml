@model StThomasMission.Core.Entities.Announcement

@{
    ViewData["Title"] = "Delete Announcement";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="fas fa-trash me-2"></i>Delete Announcement</h2>
        </div>
        <div class="card-body">
            <h4 class="mb-3">Are you sure you want to delete this announcement?</h4>
            <div class="row">
                <div class="col-12 col-md-6 mb-3">
                    <label class="form-label fw-bold">Title</label>
                    <p class="form-control-plaintext">@Model.Title</p>
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <label class="form-label fw-bold">Posted Date</label>
                    <p class="form-control-plaintext">@Model.PostedDate.ToString("yyyy-MM-dd")</p>
                </div>
                <div class="col-12 mb-3">
                    <label class="form-label fw-bold">Description</label>
                    <p class="form-control-plaintext">@Model.Description</p>
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <label class="form-label fw-bold">Is Active</label>
                    <p class="form-control-plaintext">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </p>
                </div>
            </div>
            <form asp-action="Delete" asp-area="Admin" method="post" id="deleteAnnouncementForm">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="RowVersion" value="@Convert.ToBase64String(Model.RowVersion)" />
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary me-2"><i class="fas fa-times me-2"></i>Cancel</a>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-2"></i>Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Loading spinner for form submission
            $("#deleteAnnouncementForm").on("submit", function () {
                var $submitButton = $(this).find('button[type="submit"]');
                $submitButton.prop("disabled", true).prepend('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>');
            });
        });
    </script>
}