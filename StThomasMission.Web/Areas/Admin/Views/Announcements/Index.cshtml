@model StThomasMission.Web.Areas.Admin.Models.AnnouncementIndexViewModel
@{
    ViewData["Title"] = "Announcements";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="fas fa-bullhorn me-2"></i>Announcements Management</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Add New Announcement</a>
</div>

<partial name="_StatusMessages" />

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Posted Date</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Announcements)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.PostedDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>