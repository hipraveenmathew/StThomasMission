@model StThomasMission.Web.Areas.Admin.Models.AuditLogIndexViewModel
@{
    ViewData["Title"] = "Audit Logs";
    ViewData["CurrentSort"] = Model.CurrentSort;
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0"><i class="fas fa-history me-2"></i>Audit Log</h4>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-4 bg-light p-3 rounded">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label asp-for="Filter.UserId" class="form-label"></label>
                    <input asp-for="Filter.UserId" class="form-control" placeholder="Filter by User ID" />
                </div>
                <div class="col-md-3">
                    <label asp-for="Filter.EntityName" class="form-label"></label>
                    <input asp-for="Filter.EntityName" class="form-control" placeholder="e.g., Family, Student" />
                </div>
                <div class="col-md-2">
                    <label asp-for="Filter.StartDate" class="form-label"></label>
                    <input asp-for="Filter.StartDate" type="date" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label asp-for="Filter.EndDate" class="form-label"></label>
                    <input asp-for="Filter.EndDate" type="date" class="form-control" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-filter me-2"></i>Filter</button>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th sort-header sort-by="Timestamp">Timestamp</th>
                        <th sort-header sort-by="Username">Username</th>
                        <th sort-header sort-by="Action">Action</th>
                        <th sort-header sort-by="EntityName">Entity</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.Logs)
                    {
                        <tr>
                            <td>@log.Timestamp.ToString("g")</td>
                            <td>@log.Username</td>
                            <td>@log.Action</td>
                            <td>@log.EntityName (@log.EntityId)</td>
                            <td>@log.Details</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <pagination-controls for="Model.Logs" />
    </div>
</div>