@model IEnumerable<StThomasMission.Web.Areas.Admin.Models.BackupViewModel>
@{
    ViewData["Title"] = "Backups";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Backups</h3>
        <button id="createBackupBtn" class="btn btn-modern">Create Backup</button>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <p>No backups available.</p>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var backup in Model)
                    {
                        <tr>
                            <td>@backup.FileName</td>
                            <td>@backup.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                <a asp-action="Download" asp-route-fileName="@backup.FileName" class="btn btn-sm btn-primary">
                                    <i class="fas fa-download"></i> Download
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#createBackupBtn").click(function () {
                $.ajax({
                    url: '@Url.Action("Create", "Backup", new { area = "Admin" })',
                    type: 'POST',
                    success: function (data) {
                        if (data.success) {
                            alert(data.message);
                            location.reload();
                        } else {
                            alert(data.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while creating the backup.');
                    }
                });
            });
        });
    </script>
}