@model StThomasMission.Core.Entities.MassTiming

@{
    ViewData["Title"] = "Delete Mass Timing";
}

<h2>Delete Mass Timing</h2>

<h3>Are you sure you want to delete this mass timing?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Day</dt>
        <dd class="col-sm-10">@Model.Day</dd>
        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">@Model.Time.ToString(@"hh\:mm")</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>
        <dt class="col-sm-2">Week Start Date</dt>
        <dd class="col-sm-10">@Model.WeekStartDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>