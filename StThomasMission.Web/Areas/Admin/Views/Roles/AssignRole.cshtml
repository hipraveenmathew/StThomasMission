@model StThomasMission.Web.Areas.Admin.Models.AssignRoleViewModel
@{
    ViewData["Title"] = "Assign Role";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Assign Role to @Model.FullName</h3>
    </div>
    <div class="card-body">
        <form asp-action="AssignRole" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="FullName" />

            <div class="mb-3">
                <label class="form-label">Current Roles</label>
                @if (Model.CurrentRoles.Any())
                {
                    <ul class="list-group mb-3">
                        @foreach (var role in Model.CurrentRoles)
                        {
                            <li class="list-group-item">@role</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No roles assigned.</p>
                }
            </div>

            <div class="mb-3">
                <label asp-for="SelectedRole" class="form-label"></label>
                <select asp-for="SelectedRole" class="form-select" asp-items="@(new SelectList(Model.AvailableRoles))">
                    <option value="">-- Select a role --</option>
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-modern">Assign Role</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}