@model StThomasMission.Web.Areas.Admin.Models.UserRoleIndexViewModel
@{
    ViewData["Title"] = "User Role Management";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0"><i class="fas fa-users-cog me-2"></i>User Role Management</h4>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label asp-for="SearchTerm" class="form-label">Search by Name or Email</label>
                    <input asp-for="SearchTerm" class="form-control" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-search me-2"></i>Search</button>
                </div>
            </div>
        </form>

        <partial name="_StatusMessage" />

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Current Role</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.PagedUsers)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td><span class="badge bg-info text-dark">@user.Role</span></td>
                            <td class="text-end">
                                <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#roleModal-@user.Id">
                                    <i class="fas fa-edit me-1"></i> Change Role
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <pagination-controls for="Model.PagedUsers" />
    </div>
</div>

@foreach (var user in Model.PagedUsers)
{
    <div class="modal fade" id="roleModal-@user.Id" tabindex="-1" aria-labelledby="roleModalLabel-@user.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="UpdateUserRole" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="roleModalLabel-@user.Id">Change Role for @user.FullName</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <div class="mb-3">
                            <label for="role-@user.Id" class="form-label">New Role</label>
                            <select name="role" id="role-@user.Id" class="form-select" asp-items="Model.RolesForDropdown" asp-for="@user.Role"></select>
                        </div>
                        <p class="text-muted small">Note: The user will be removed from all current roles and assigned only the selected role.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}