@model StThomasMission.Web.Areas.Admin.Models.UserIndexViewModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="fas fa-users-cog me-2"></i>Manage Users</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-user-plus me-2"></i>Create New User</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label asp-for="SearchTerm" class="form-label">Search by Name or Email</label>
                    <input asp-for="SearchTerm" class="form-control" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-search me-2"></i>Search</button>
                </div>
            </div>
        </form>

        <partial name="_StatusMessage" />

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Ward</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.PagedUsers)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td><span class="badge bg-info text-dark">@user.Role</span></td>
                            <td>@user.WardName</td>
                            <td>
                                <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">
                                    @(user.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Edit</a>
                                @if (user.IsActive)
                                {
                                    <form asp-action="Deactivate" asp-route-id="@user.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-user-slash"></i> Deactivate</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Reactivate" asp-route-id="@user.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-user-check"></i> Reactivate</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <pagination-controls for="Model.PagedUsers" />
    </div>
</div>