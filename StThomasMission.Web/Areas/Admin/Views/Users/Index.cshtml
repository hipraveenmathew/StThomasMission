@model IEnumerable<StThomasMission.Web.Areas.Admin.Models.UserViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Manage Users</h3>
        <a asp-action="Create" class="btn btn-modern">
            <i class="fas fa-plus"></i> Create User
        </a>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <p>No users found.</p>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Full Name</th>
                        <th>Ward ID</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.FullName</td>
                            <td>@user.WardId</td>
                            <td>@(user.IsActive ? "Yes" : "No")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>