@model StThomasMission.Web.Areas.Catechism.Models.AbsenteeNotificationViewModel

@{
    ViewData["Title"] = "Send Absentee Notifications";
}

<h2 class="mb-4">Send Absentee Notifications</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="SendAbsenteeNotifications" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Grade" class="form-label">Grade</label>
                <input asp-for="Grade" class="form-control" placeholder="e.g., 1 for Year 1" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Communication Methods</label><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="CommunicationMethods" value="SMS" checked />
                    <label class="form-check-label">SMS</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="CommunicationMethods" value="Email" />
                    <label class="form-check-label">Email</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="CommunicationMethods" value="WhatsApp" />
                    <label class="form-check-label">WhatsApp</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Send Notifications</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
