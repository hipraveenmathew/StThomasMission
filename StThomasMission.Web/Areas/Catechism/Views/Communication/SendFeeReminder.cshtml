@model StThomasMission.Web.Areas.Catechism.Models.FeeReminderViewModel
@{
    ViewData["Title"] = "Send Fee Reminder";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Send Fee Reminder</h3>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="SendFeeReminder" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FamilyId" class="form-label"></label>
                <input asp-for="FamilyId" type="number" class="form-control" placeholder="Enter family ID" />
                <span asp-validation-for="FamilyId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FeeDetails" class="form-label"></label>
                <textarea asp-for="FeeDetails" class="form-control" rows="5" placeholder="Enter fee details"></textarea>
                <span asp-validation-for="FeeDetails" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-modern">Send Fee Reminder</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}