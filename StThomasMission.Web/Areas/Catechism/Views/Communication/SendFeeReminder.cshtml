@model StThomasMission.Web.Areas.Catechism.Models.FeeReminderViewModel

@{
    ViewData["Title"] = "Send Fee Reminder";
}

<h1 class="mb-4">Send Fee Reminder</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="SendFeeReminder" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="StudentId" class="form-label">Student ID</label>
        <input asp-for="StudentId" class="form-control" type="number" />
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FeeDetails" class="form-label">Fee Details</label>
        <input asp-for="FeeDetails" class="form-control" placeholder="e.g., £50 for Year 1" />
        <span asp-validation-for="FeeDetails" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send Reminder</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
