@model StThomasMission.Web.Areas.Catechism.Models.FeeReminderViewModel

@{
    ViewData["Title"] = "Send Fee Reminder";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Send Fee Reminder</h3>
        </div>
        <div class="card-body">
            <form asp-action="SendFeeReminder" asp-area="Catechism" method="post" id="sendFeeReminderForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="FamilyId" class="form-label fw-bold">Family ID</label>
                        <input asp-for="FamilyId" type="number" class="form-control" placeholder="Enter family ID" min="1" required />
                        <span asp-validation-for="FamilyId" class="text-danger"></span>
                    </div>
                    <div class="col-12 mb-3">
                        <label asp-for="FeeDetails" class="form-label fw-bold">Fee Details</label>
                        <textarea asp-for="FeeDetails" class="form-control" rows="5" placeholder="Enter fee details" required></textarea>
                        <span asp-validation-for="FeeDetails" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane me-2"></i>Send Fee Reminder</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast Notification Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="feeReminderToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Fee Reminder Status</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize jQuery Validate
            $("#sendFeeReminderForm").validate({
                rules: {
                    FamilyId: {
                        required: true,
                        number: true,
                        min: 1
                    },
                    FeeDetails: {
                        required: true,
                        maxlength: 2000
                    }
                },
                messages: {
                    FamilyId: {
                        required: "Please enter a family ID.",
                        number: "Please enter a valid number.",
                        min: "Family ID must be a positive number."
                    },
                    FeeDetails: {
                        required: "Please enter fee details.",
                        maxlength: "Fee details cannot exceed 2000 characters."
                    }
                },
                errorElement: "div",
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("is-invalid");
                },
                unhighlight: function (element) {
                    $(element).removeClass("is-invalid");
                }
            });

            // Loading spinner for form submission
            $("#sendFeeReminderForm").on("submit", function () {
                var $submitButton = $(this).find('button[type="submit"]');
                if ($(this).valid()) {
                    $submitButton.prop("disabled", true).prepend('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>');
                }
            });
        });
    </script>
}