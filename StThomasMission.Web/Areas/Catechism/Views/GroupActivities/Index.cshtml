@model IEnumerable<StThomasMission.Core.Entities.GroupActivity>

@{
    ViewData["Title"] = "All Group Activities";
}

<h1>All Group Activities</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Group</th>
            <th>Activity</th>
            <th>Points</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.Group</td>
                <td>@activity.Name</td>
                <td>@activity.Points</td>
                <td>@activity.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
