@model StThomasMission.Web.Models.PaginatedList<StThomasMission.Core.Entities.GroupActivity>
@{
    ViewData["Title"] = "Group Activities";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Group Activities</h3>
        <a asp-action="AddActivity" class="btn btn-modern">
            <i class="fas fa-plus"></i> Add Activity
        </a>
    </div>
    <div class="card-body">
        @if (Model.Count == 0)
        {
            <p>No group activities found.</p>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Group</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Points</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model)
                    {
                        <tr>
                            <td>@activity.GroupId</td>
                            <td>@activity.Name</td>
                            <td>@activity.Date.ToString("yyyy-MM-dd")</td>
                            <td>@activity.Description</td>
                            <td>@activity.Points</td>
                            <td>
                                <a asp-action="Participation" asp-route-groupActivityId="@activity.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-users"></i> View Participants
                                </a>
                                @if (User.IsInRole("HeadTeacher"))
                                {
                                    <a asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@activity.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this activity?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageIndex - 1, pageSize = Model.PageSize })">Previous</a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, pageSize = Model.PageSize })">@i</a>
                        </li>
                    }
                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageIndex + 1, pageSize = Model.PageSize })">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>