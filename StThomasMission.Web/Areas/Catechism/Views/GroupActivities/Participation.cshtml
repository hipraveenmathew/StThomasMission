@model StThomasMission.Web.Models.PaginatedList<StThomasMission.Core.Entities.StudentGroupActivity>

@{
    ViewData["Title"] = "Activity Participants";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="fas fa-users me-2"></i>Participants for Activity ID: @ViewData["GroupActivityId"]</h3>
            <a asp-action="RecordParticipation" asp-area="Catechism" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Record Participation</a>
        </div>
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Count == 0)
            {
                <div class="alert alert-info text-center" role="alert">
                    No participants found for this activity.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Student</th>
                                <th>Points</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var participation in Model)
                            {
                                <tr>
                                    <td>
                                        @(participation.Student?.FamilyMember != null
                                            ? $"{participation.Student.FamilyMember.FirstName} {participation.Student.FamilyMember.LastName}"
                                            : "N/A")
                                    </td>
                                    <td>@(participation.GroupActivity != null ? participation.GroupActivity.Points : "N/A")</td>
                                    <td>@participation.Date.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Participation", new { groupActivityId = ViewData["GroupActivityId"], pageNumber = Model.PageIndex - 1, pageSize = Model.PageSize })"><i class="fas fa-chevron-left"></i> Previous</a>
                            </li>
                        }
                        @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Participation", new { groupActivityId = ViewData["GroupActivityId"], pageNumber = i, pageSize = Model.PageSize })">@i</a>
                            </li>
                        }
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Participation", new { groupActivityId = ViewData["GroupActivityId"], pageNumber = Model.PageIndex + 1, pageSize = Model.PageSize })">Next <i class="fas fa-chevron-right"></i></a>
                            </li>
                        }
                    </ul>
                    <div class="text-center mt-2">
                        <small>Showing @(Model.PageIndex * Model.PageSize - Model.PageSize + 1)-@(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalItems)) of @Model.TotalItems participants</small>
                    </div>
                </nav>
            }

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" asp-area="Catechism" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Activities</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}