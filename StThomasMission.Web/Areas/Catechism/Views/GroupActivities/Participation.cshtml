@model StThomasMission.Web.Models.PaginatedList<StThomasMission.Core.Entities.StudentGroupActivity>
@{
    ViewData["Title"] = "Activity Participants";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Participants for Activity ID: @ViewData["GroupActivityId"]</h3>
        <a asp-action="RecordParticipation" class="btn btn-modern">
            <i class="fas fa-plus"></i> Record Participation
        </a>
    </div>
    <div class="card-body">
        @if (Model.Count == 0)
        {
            <p>No participants found for this activity.</p>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Points</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var participation in Model)
                    {
                        <tr>
                            <td>@(participation.Student?.FamilyMember?.FirstName ?? "N/A") @(participation.Student?.FamilyMember?.LastName ?? "N/A")</td>
                            <td>@participation.GroupActivity?.Points</td>
                            <td>@participation.Date.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Participation", new { groupActivityId = ViewData["GroupActivityId"], pageNumber = Model.PageIndex - 1, pageSize = Model.PageSize })">Previous</a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Participation", new { groupActivityId = ViewData["GroupActivityId"], pageNumber = i, pageSize = Model.PageSize })">@i</a>
                        </li>
                    }
                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Participation", new { groupActivityId = ViewData["GroupActivityId"], pageNumber = Model.PageIndex + 1, pageSize = Model.PageSize })">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }

        <a asp-action="Index" class="btn btn-secondary">Back to Activities</a>
    </div>
</div>