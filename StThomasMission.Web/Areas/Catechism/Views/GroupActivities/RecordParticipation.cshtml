@model StThomasMission.Web.Areas.Catechism.Models.RecordParticipationViewModel
@{
    ViewData["Title"] = "Record Participation";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Record Participation</h3>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="RecordParticipation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="StudentId" class="form-label"></label>
                <input asp-for="StudentId" type="number" class="form-control" placeholder="Enter student ID" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GroupActivityId" class="form-label"></label>
                <input asp-for="GroupActivityId" type="number" class="form-control" placeholder="Enter group activity ID" />
                <span asp-validation-for="GroupActivityId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-modern">Record Participation</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}