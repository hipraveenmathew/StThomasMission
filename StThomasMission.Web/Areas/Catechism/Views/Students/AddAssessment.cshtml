@model StThomasMission.Web.Areas.Catechism.Models.AssessmentViewModel
@{
    ViewData["Title"] = "Add Assessment";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Add Assessment for @ViewData["StudentName"]</h3>
    </div>
    <div class="card-body">
        <form asp-action="AddAssessment" method="post">
            <input type="hidden" asp-for="StudentId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter assessment name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Marks" class="form-label"></label>
                <input asp-for="Marks" type="number" step="0.01" class="form-control" placeholder="Enter marks obtained" />
                <span asp-validation-for="Marks" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TotalMarks" class="form-label"></label>
                <input asp-for="TotalMarks" type="number" step="0.01" class="form-control" placeholder="Enter total marks" />
                <span asp-validation-for="TotalMarks" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsMajor" type="checkbox" class="form-check-input" id="isMajor" />
                <label class="form-check-label" for="isMajor">Is Major Assessment?</label>
            </div>

            <button type="submit" class="btn btn-modern">Add Assessment</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}