@model StThomasMission.Web.Areas.Catechism.Models.StudentDetailsViewModel
@{
    ViewData["Title"] = "Delete Student";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Delete Student: @Model.FirstName @Model.LastName</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h4>Are you sure you want to delete this student?</h4>
            <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
            <p><strong>Grade:</strong> @Model.Grade</p>
            <p><strong>Group:</strong> @Model.GroupId</p>
            <p><strong>Status:</strong> @Model.Status</p>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>