@model StThomasMission.Web.Areas.Catechism.Models.EditStudentViewModel
@{
    ViewData["Title"] = "Edit Student";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Edit Student: @Model.FirstName @Model.LastName</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FamilyMemberId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" readonly />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" readonly />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Grade" class="form-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AcademicYear" class="form-label"></label>
                <input asp-for="AcademicYear" type="number" class="form-control" />
                <span asp-validation-for="AcademicYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GroupId" class="form-label"></label>
                <input asp-for="GroupId" type="number" class="form-control" />
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StudentOrganisation" class="form-label"></label>
                <input asp-for="StudentOrganisation" class="form-control" placeholder="e.g., Sunday School" />
                <span asp-validation-for="StudentOrganisation" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<StThomasMission.Core.Enums.StudentStatus>()">
                    <option value="">Select Status</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-modern">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}