@model StThomasMission.Web.Areas.Catechism.Models.ClassAttendanceViewModel
@{
    ViewData["Title"] = "Mark Attendance";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Mark Attendance for @Model.Grade</h3>
    </div>
    <div class="card-body">
        <form asp-action="MarkAttendance" method="post">
            <input type="hidden" asp-for="Grade" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Present</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Students.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Students[i].Name
                                <input type="hidden" asp-for="Students[i].StudentId" />
                                <input type="hidden" asp-for="Students[i].Name" />
                            </td>
                            <td>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="Students[i].IsPresent" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <button type="submit" class="btn btn-modern">Submit Attendance</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}