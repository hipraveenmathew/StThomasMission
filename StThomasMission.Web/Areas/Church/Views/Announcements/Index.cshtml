@model StThomasMission.Web.Areas.Church.Models.SendAnnouncementViewModel
@using StThomasMission.Core.Enums

@{
    ViewData["Title"] = "Send Parish Announcement";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0"><i class="fas fa-bullhorn me-2"></i>Send Parish Announcement</h4>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="post" id="announcementForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <partial name="_StatusMessage" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="WardId" class="form-label fw-bold"></label>
                    <select asp-for="WardId" class="form-select" asp-items="Model.AvailableWards">
                        <option value="">-- Select a Ward --</option>
                    </select>
                    <span asp-validation-for="WardId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Channel" class="form-label fw-bold"></label>
                    <div class="pt-2">
                        @foreach (var channel in Html.GetEnumSelectList<CommunicationChannel>())
                        {
                            <div class="form-check form-check-inline">
                                <input asp-for="Channel" type="radio" value="@channel.Value" class="form-check-input" id="channel-@channel.Value" />
                                <label class="form-check-label" for="channel-@channel.Value">@channel.Text</label>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="Channel" class="text-danger d-block"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Message" class="form-label fw-bold"></label>
                    <textarea asp-for="Message" class="form-control" rows="6" placeholder="Enter your announcement here..."></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-paper-plane me-2"></i>Send Announcement
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#announcementForm").on("submit", function () {
                if ($(this).valid()) {
                    var $button = $(this).find('button[type="submit"]');
                    $button.prop("disabled", true).html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Sending...');
                }
            });
        });
    </script>
}