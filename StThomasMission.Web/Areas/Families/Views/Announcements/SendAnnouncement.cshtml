@model StThomasMission.Web.Areas.Families.Models.SendAnnouncementViewModel

@{
    ViewData["Title"] = "Send Parish Announcement";
}

<h1>Send Parish Announcement</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="SendAnnouncement" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ward" class="control-label">Ward (Optional)</label>
                <input asp-for="Ward" class="form-control" placeholder="e.g., St. John Ward" />
                <span asp-validation-for="Ward" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Communication Methods</label><br />
                <input type="checkbox" name="CommunicationMethods" value="Email" checked /> Email
                <input type="checkbox" name="CommunicationMethods" value="SMS" /> SMS
                <input type="checkbox" name="CommunicationMethods" value="WhatsApp" /> WhatsApp
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Send Announcement</button>
            </div>
        </form>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
