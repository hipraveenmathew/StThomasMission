@model StThomasMission.Web.Areas.Church.Models.FamilyDetailsViewModel
@{
    ViewData["Title"] = $"Details for {Model.Family.FamilyName}";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="fas fa-home me-2"></i>@Model.Family.FamilyName</h2>
    <div>
        <a asp-action="Edit" asp-controller="Families" asp-route-id="@Model.Family.Id" class="btn btn-warning"><i class="fas fa-edit me-2"></i>Edit Family</a>
        <a asp-action="Create" asp-controller="FamilyMembers" asp-route-familyId="@Model.Family.Id" class="btn btn-primary"><i class="fas fa-user-plus me-2"></i>Add Member</a>
    </div>
</div>

<partial name="_StatusMessage" />

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">Family Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ward</dt>
            <dd class="col-sm-9">@Model.Family.WardName</dd>

            <dt class="col-sm-3">Registration Status</dt>
            <dd class="col-sm-9">
                @if (Model.Family.IsRegistered)
                {
                    <span class="fw-bold">Registered - @Model.Family.ChurchRegistrationNumber</span>
                }
                else
                {
                    <span class="text-muted">Temporary - @Model.Family.TemporaryID</span>
                    <form asp-action="ConvertToRegistered" asp-route-familyId="@Model.Family.Id" method="post" class="d-inline ms-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-success">Convert to Registered</button>
                    </form>
                }
            </dd>

            <dt class="col-sm-3">Contact Email</dt>
            <dd class="col-sm-9">@Model.Family.Email</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">
                @Model.Family.HouseNumber @Model.Family.StreetName, @Model.Family.City, @Model.Family.PostCode
            </dd>
        </dl>
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header">
        <h5 class="mb-0">Family Members</h5>
    </div>
    <div class="card-body">
        @if (Model.Family.Members.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var member in Model.Family.Members)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@member.FullName</strong><br />
                            <small class="text-muted">@member.Relation - DOB: @member.DateOfBirth.ToShortDateString()</small>
                        </div>
                        <a asp-controller="FamilyMembers" asp-action="Edit" asp-route-id="@member.Id" class="btn btn-sm btn-outline-secondary">Edit Member</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No members have been added to this family yet.</p>
        }
    </div>
</div>