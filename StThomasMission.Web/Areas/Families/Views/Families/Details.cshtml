@using StThomasMission.Core.Enums
@model StThomasMission.Web.Areas.Families.Models.FamilyDetailsViewModel

@{
    ViewData["Title"] = "Family Details";
}

<div class="container my-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex flex-column flex-md-row justify-content-between align-items-md-center p-3">
            <h3 class="mb-0"><i class="fas fa-users me-2"></i>@Model.FamilyName</h3>
            <a asp-action="AddMember" asp-route-familyId="@Model.Id" asp-area="Families" class="btn btn-light btn-sm mt-2 mt-md-0">
                <i class="fas fa-plus me-2"></i>Add Member
            </a>
        </div>
        <div class="card-body p-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Family Info -->
            <div class="mb-4">
                <h5 class="fw-bold mb-3">Family Information</h5>
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <p class="mb-2"><strong>Family Name:</strong> @Model.FamilyName</p>
                        <p class="mb-2"><strong>Ward:</strong> @Model.Ward</p>
                        <p class="mb-2"><strong>Registration:</strong> @(Model.IsRegistered ? Model.ChurchRegistrationNumber ?? "N/A" : Model.TemporaryID ?? "N/A")</p>
                        <p class="mb-2">
                            <strong>Status:</strong>
                            <span class="badge @(Model.Status == FamilyStatus.Active ? "bg-success" : Model.Status == FamilyStatus.Migrated ? "bg-info" : Model.Status == FamilyStatus.Inactive ? "bg-secondary" : "bg-danger")">
                                @Model.Status
                            </span>
                        </p>
                        @if (!string.IsNullOrEmpty(Model.MigratedTo))
                        {
                            <p class="mb-2"><strong>Migrated To:</strong> @Model.MigratedTo</p>
                        }
                    </div>
                    <div class="col-12 col-md-6">
                        <!-- Collapsible Additional Details -->
                        <div class="accordion" id="familyDetailsAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingDetails">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDetails" aria-expanded="false" aria-controls="collapseDetails">
                                        Additional Details
                                    </button>
                                </h2>
                                <div id="collapseDetails" class="accordion-collapse collapse" aria-labelledby="headingDetails" data-bs-parent="#familyDetailsAccordion">
                                    <div class="accordion-body">
                                        <p class="mb-2"><strong>House Number:</strong> @(string.IsNullOrEmpty(Model.HouseNumber) ? "N/A" : Model.HouseNumber)</p>
                                        <p class="mb-2"><strong>Street Name:</strong> @(string.IsNullOrEmpty(Model.StreetName) ? "N/A" : Model.StreetName)</p>
                                        <p class="mb-2"><strong>City:</strong> @(string.IsNullOrEmpty(Model.City) ? "N/A" : Model.City)</p>
                                        <p class="mb-2"><strong>Post Code:</strong> @(string.IsNullOrEmpty(Model.PostCode) ? "N/A" : Model.PostCode)</p>
                                        <p class="mb-2"><strong>Email:</strong> @(string.IsNullOrEmpty(Model.Email) ? "N/A" : Model.Email)</p>
                                        <p class="mb-2"><strong>Gift Aid:</strong> @(Model.GiftAid ? "Yes" : "No")</p>
                                        <p class="mb-2"><strong>Parish in India:</strong> @(string.IsNullOrEmpty(Model.ParishIndia) ? "N/A" : Model.ParishIndia)</p>
                                        <p class="mb-2"><strong>Eparchy in India:</strong> @(string.IsNullOrEmpty(Model.EparchyIndia) ? "N/A" : Model.EparchyIndia)</p>
                                        <p class="mb-2"><strong>Created By:</strong> @(string.IsNullOrEmpty(Model.CreatedBy) ? "N/A" : Model.CreatedBy)</p>
                                        <p class="mb-2"><strong>Updated By:</strong> @(string.IsNullOrEmpty(Model.UpdatedBy) ? "N/A" : Model.UpdatedBy)</p>
                                        @if (Model.PreviousFamilyId.HasValue)
                                        {
                                            <p class="mb-2">
                                                <strong>Previous Family:</strong>
                                                <a asp-action="Details" asp-controller="Families" asp-area="Families" asp-route-id="@Model.PreviousFamilyId">
                                                    @Model.PreviousFamily?.FamilyName ?? "View Previous Family"
                                                </a>
                                            </p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Family Members -->
            <h5 class="fw-bold mb-3">Family Members</h5>
            @if (Model.Members.Any())
            {
                <div class="row g-3">
                    @foreach (var member in Model.Members)
                    {
                        <div class="col-12">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <h6 class="card-title fw-bold">@(string.IsNullOrEmpty(member.FirstName) ? "N/A" : member.FirstName) @(string.IsNullOrEmpty(member.LastName) ? "N/A" : member.LastName)</h6>
                                    <p class="mb-1"><strong>Relation:</strong> @(member.Relation != default(FamilyMemberRole) ? member.Relation.ToString() : "N/A")</p>
                                    <p class="mb-1"><strong>Date of Birth:</strong> @(member.DateOfBirth != default ? member.DateOfBirth.ToString("yyyy-MM-dd") : "N/A")</p>
                                    <!-- Collapsible Member Details -->
                                    <div class="accordion" id="memberAccordion_@member.Id">
                                        <div class="accordion-item border-0">
                                            <h2 class="accordion-header" id="heading_@member.Id">
                                                <button class="accordion-button collapsed p-0 bg-transparent text-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@member.Id" aria-expanded="false" aria-controls="collapse_@member.Id">
                                                    More Details
                                                </button>
                                            </h2>
                                            <div id="collapse_@member.Id" class="accordion-collapse collapse" aria-labelledby="heading_@member.Id" data-bs-parent="#memberAccordion_@member.Id">
                                                <div class="accordion-body p-0 pt-2">
                                                    <p class="mb-1"><strong>Baptismal Name:</strong> @(string.IsNullOrEmpty(member.BaptismalName) ? "N/A" : member.BaptismalName)</p>
                                                    <p class="mb-1"><strong>Date of Baptism:</strong> @(member.DateOfBaptism.HasValue ? member.DateOfBaptism.Value.ToString("yyyy-MM-dd") : "N/A")</p>
                                                    <p class="mb-1"><strong>Date of Chrismation:</strong> @(member.DateOfChrismation.HasValue ? member.DateOfChrismation.Value.ToString("yyyy-MM-dd") : "N/A")</p>
                                                    <p class="mb-1"><strong>Date of Holy Communion:</strong> @(member.DateOfHolyCommunion.HasValue ? member.DateOfHolyCommunion.Value.ToString("yyyy-MM-dd") : "N/A")</p>
                                                    <p class="mb-1"><strong>Date of Marriage:</strong> @(member.DateOfMarriage.HasValue ? member.DateOfMarriage.Value.ToString("yyyy-MM-dd") : "N/A")</p>
                                                    <p class="mb-1"><strong>Date of Death:</strong> @(member.DateOfDeath.HasValue ? member.DateOfDeath.Value.ToString("yyyy-MM-dd") : "N/A")</p>
                                                    <p class="mb-1"><strong>Contact:</strong> @(string.IsNullOrEmpty(member.Contact) ? "N/A" : member.Contact)</p>
                                                    <p class="mb-1"><strong>Email:</strong> @(string.IsNullOrEmpty(member.Email) ? "N/A" : member.Email)</p>
                                                    <p class="mb-1"><strong>Role:</strong> @(string.IsNullOrEmpty(member.Role) ? "N/A" : member.Role)</p>
                                                    <p class="mb-1"><strong>Created By:</strong> @(string.IsNullOrEmpty(member.CreatedBy) ? "N/A" : member.CreatedBy)</p>
                                                    <p class="mb-1"><strong>Updated By:</strong> @(string.IsNullOrEmpty(member.UpdatedBy) ? "N/A" : member.UpdatedBy)</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2 mt-2">
                                        <a asp-area="Families" asp-controller="FamilyMembers" asp-action="Edit" asp-route-id="@member.Id" class="btn btn-sm btn-outline-warning w-100">
                                            <i class="fas fa-edit me-2"></i>Edit
                                        </a>
                                        <a asp-action="EnrollStudent" asp-route-familyMemberId="@member.Id" asp-area="Families" class="btn btn-sm btn-outline-primary w-100">
                                            <i class="fas fa-user-plus me-2"></i>Enroll as Student
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    No family members found.
                </div>
            }

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" asp-area="Families" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Families</a>
            </div>
        </div>
    </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="familyDetailsToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Family Details Status</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Ensure accordions are touch-friendly
            $('.accordion-button').on('touchstart', function (e) {
                $(this).trigger('click');
            });
        });
    </script>
}
