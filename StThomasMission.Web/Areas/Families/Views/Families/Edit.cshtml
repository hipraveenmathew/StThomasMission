@model StThomasMission.Web.Areas.Church.Models.FamilyFormViewModel
@{
    ViewData["Title"] = "Edit Family";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Family: @Model.FamilyName</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <partial name="_FamilyForm" model="Model" />
            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-warning">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}