@model StThomasMission.Web.Areas.Families.Models.StudentEnrollmentViewModel

@{
    ViewData["Title"] = "Enroll Student";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i>Enroll Student: @(ViewData["FamilyMemberName"] ?? "Student")</h3>
        </div>
        <div class="card-body">
            <form asp-action="EnrollStudent" asp-area="Families" method="post" id="enrollStudentForm">
                <input type="hidden" asp-for="FamilyMemberId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="Grade" class="form-label fw-bold"></label>
                        <input asp-for="Grade" class="form-control" placeholder="e.g., Year 1" required />
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="AcademicYear" class="form-label fw-bold"></label>
                        <input asp-for="AcademicYear" type="number" class="form-control" min="2000" max="@DateTime.Now.Year" required />
                        <span asp-validation-for="AcademicYear" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="Group" class="form-label fw-bold">Group ID (Optional)</label>
                        <input asp-for="Group" type="number" class="form-control" placeholder="Enter group ID" min="0" />
                        <span asp-validation-for="Group" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <label asp-for="StudentOrganisation" class="form-label fw-bold">Student Organisation (Optional)</label>
                        <input asp-for="StudentOrganisation" class="form-control" placeholder="e.g., Sunday School" />
                        <span asp-validation-for="StudentOrganisation" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" asp-area="Families" class="btn btn-secondary me-2"><i class="fas fa-times me-2"></i>Cancel</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Enroll</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast Notification Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="enrollStudentToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Enrollment Status</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize jQuery Validate
            $("#enrollStudentForm").validate({
                rules: {
                    Grade: {
                        required: true,
                        maxlength: 50
                    },
                    AcademicYear: {
                        required: true,
                        number: true,
                        min: 2000,
                        max: @DateTime.Now.Year
                    },
                    Group: {
                        number: true,
                        min: 0
                    },
                    StudentOrganisation: {
                        maxlength: 100
                    }
                },
                messages: {
                    Grade: {
                        required: "Please enter a grade.",
                        maxlength: "Grade cannot exceed 50 characters."
                    },
                    AcademicYear: {
                        required: "Please enter an academic year.",
                        number: "Please enter a valid number.",
                        min: "Academic year must be at least 2000.",
                        max: "Academic year cannot exceed the current year."
                    },
                    Group: {
                        number: "Please enter a valid number.",
                        min: "Group ID cannot be negative."
                    },
                    StudentOrganisation: {
                        maxlength: "Student organisation cannot exceed 100 characters."
                    }
                },
                errorElement: "div",
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("is-invalid");
                },
                unhighlight: function (element) {
                    $(element).removeClass("is-invalid");
                }
            });

            // Loading spinner for form submission
            $("#enrollStudentForm").on("submit", function () {
                var $submitButton = $(this).find('button[type="submit"]');
                if ($(this).valid()) {
                    $submitButton.prop("disabled", true).prepend('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>');
                }
            });
        });
    </script>
}