@model StThomasMission.Web.Areas.Families.Models.FamilyIndexViewModel
@{
    ViewData["Title"] = "Family Management";
    ViewData["CurrentSort"] = Model.CurrentSort;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="fas fa-users me-2"></i>Family Management</h2>
    <a asp-action="Register" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Register New Family</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-4 bg-light p-3 rounded border">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label asp-for="Filter.SearchTerm" class="form-label">Search by Name or ID</label>
                    <input asp-for="Filter.SearchTerm" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="Filter.WardId" class="form-label">Ward</label>
                    <select asp-for="Filter.WardId" class="form-select" asp-items="Model.AvailableWards">
                        <option value="">All Wards</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="Filter.IsRegistered" class="form-label">Registration Status</label>
                    <select asp-for="Filter.IsRegistered" class="form-select">
                        <option value="">All</option>
                        <option value="true">Registered</option>
                        <option value="false">Temporary</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-filter me-2"></i>Filter</button>
                </div>
            </div>
        </form>

        <partial name="_StatusMessage" />

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th sort-header sort-by="FamilyName">Family Name</th>
                        <th sort-header sort-by="WardName">Ward</th>
                        <th>Registration #</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var family in Model.PagedFamilies)
                    {
                        <tr>
                            <td>@family.FamilyName</td>
                            <td>@family.WardName</td>
                            <td>
                                @if (family.IsRegistered)
                                {
                                    <span class="fw-bold">@family.ChurchRegistrationNumber</span>
                                }
                                else
                                {
                                    <span class="text-muted">@family.TemporaryID</span>
                                }
                            </td>
                            <td>
                                <span class="badge @(family.Status == StThomasMission.Core.Enums.FamilyStatus.Active ? "bg-success" : "bg-info")">@family.Status</span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@family.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-info-circle me-1"></i>Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <pagination-controls for="Model.PagedFamilies" />
    </div>
</div>