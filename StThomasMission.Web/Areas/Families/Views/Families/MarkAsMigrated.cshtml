@model StThomasMission.Web.Areas.Families.Models.MarkAsMigratedViewModel
@{
    ViewData["Title"] = "Mark as Migrated";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Mark Family as Migrated: @Model.FamilyName</h3>
    </div>
    <div class="card-body">
        <form asp-action="MarkAsMigrated" method="post">
@*             <input type="hidden" asp-for="FamilyId" />
 *@            <input type="hidden" asp-for="FamilyName" />
            <input type="hidden" asp-for="Ward" />
            <input type="hidden" asp-for="IsRegistered" />
            <input type="hidden" asp-for="ChurchRegistrationNumber" />
           @*  <input type="hidden" asp-for="TemporaryId" />
            <input type="hidden" asp-for="Status" /> *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="MigratedTo" class="form-label"></label>
                <input asp-for="MigratedTo" class="form-control" placeholder="e.g., New Parish" />
                <span asp-validation-for="MigratedTo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-modern">Mark as Migrated</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}