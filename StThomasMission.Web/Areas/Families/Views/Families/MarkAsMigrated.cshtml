@using StThomasMission.Core.Enums
@model StThomasMission.Core.Entities.Family

@{
    ViewData["Title"] = "Mark as Migrated";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="fas fa-plane me-2"></i>Mark Family as Migrated: @Model.FamilyName</h3>
        </div>
        <div class="card-body">
            <form asp-action="MarkAsMigrated" asp-area="Families" method="post" id="markAsMigratedForm">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FamilyName" />
                <input type="hidden" asp-for="WardId" />
                <input type="hidden" asp-for="IsRegistered" />
                <input type="hidden" asp-for="ChurchRegistrationNumber" />
                <input type="hidden" asp-for="TemporaryID" />
                <input type="hidden" asp-for="HouseNumber" />
                <input type="hidden" asp-for="StreetName" />
                <input type="hidden" asp-for="City" />
                <input type="hidden" asp-for="PostCode" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="GiftAid" />
                <input type="hidden" asp-for="ParishIndia" />
                <input type="hidden" asp-for="EparchyIndia" />
                <input type="hidden" asp-for="CreatedBy" />
                <input type="hidden" asp-for="UpdatedBy" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-12 mb-3">
                        <label asp-for="MigratedTo" class="form-label fw-bold">Migrated To</label>
                        <input asp-for="MigratedTo" class="form-control" placeholder="e.g., New Parish" required />
                        <span asp-validation-for="MigratedTo" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" asp-area="Families" class="btn btn-secondary me-2"><i class="fas fa-times me-2"></i>Cancel</a>
                    <button type="submit" class="btn btn-info"><i class="fas fa-save me-2"></i>Mark as Migrated</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="markAsMigratedToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Migration Status</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#markAsMigratedForm").validate({
                rules: {
                    MigratedTo: {
                        required: true,
                        maxlength: 150
                    }
                },
                messages: {
                    MigratedTo: {
                        required: "Please enter the migration destination.",
                        maxlength: "Migration destination cannot exceed 150 characters."
                    }
                },
                errorElement: "div",
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("is-invalid");
                },
                unhighlight: function (element) {
                    $(element).removeClass("is-invalid");
                }
            });

            $("#markAsMigratedForm").on("submit", function () {
                var $submitButton = $(this).find('button[type="submit"]');
                if ($(this).valid()) {
                    $submitButton.prop("disabled", true).prepend('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>');
                }
            });
        });
    </script>
}