@model StThomasMission.Web.Areas.Church.Models.FamilyFormViewModel
@{
    ViewData["Title"] = "Register New Family";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Register New Family</h4>
    </div>
    <div class="card-body">
        <form asp-action="Register">
            @Html.AntiForgeryToken()
            <partial name="_FamilyForm" model="Model" />
            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-primary">Register Family</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}