@model StThomasMission.Web.Areas.Families.Models.FamilyViewModel
@{
    ViewData["Title"] = "Registration Successful";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Registration Successful</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-success">
            <h4>Family Registered Successfully!</h4>
            <p>Family Name: @Model.FamilyName</p>
            <p>Ward: @Model.Ward</p>
            <p>Registration: @(Model.IsRegistered ? Model.ChurchRegistrationNumber : Model.TemporaryId)</p>
        </div>
        <a asp-action="AddMember" asp-route-familyId="@Model.Id" class="btn btn-modern">Add Family Member</a>
        <a asp-action="Index" class="btn btn-secondary">Back to Families</a>
    </div>
</div>