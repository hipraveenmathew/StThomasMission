@model StThomasMission.Web.Areas.Families.Models.TransitionChildViewModel

<h2>Transition Child to New Family</h2>

<form asp-action="TransitionChildToNewFamily" method="post">
    <input type="hidden" asp-for="FamilyMemberId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <p>Transitioning <strong>@Model.ChildName</strong> to a new family.</p>

    <div class="mb-3">
        <label asp-for="NewFamilyName" class="form-label"></label>
        <input asp-for="NewFamilyName" class="form-control" />
        <span asp-validation-for="NewFamilyName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="WardId" class="form-label"></label>
        <input asp-for="WardId" type="number" class="form-control" />
        <span asp-validation-for="WardId" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsRegistered" type="checkbox" class="form-check-input" />
        <label asp-for="IsRegistered" class="form-check-label">Register Family</label>
    </div>

    <button type="submit" class="btn btn-primary">Transition</button>
    <a asp-action="Details" asp-route-id="@Model.FamilyMemberId" class="btn btn-secondary">Cancel</a>
</form>