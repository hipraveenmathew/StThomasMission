@model StThomasMission.Web.Areas.Admin.Models.DashboardViewModel
@using StThomasMission.Core.Enums
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-primary shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-user-graduate me-2"></i>Total Students</h5>
                <p class="card-text fs-4">@Model.TotalStudents</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-success shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-users me-2"></i>Total Families</h5>
                <p class="card-text fs-4">@Model.TotalFamilies</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-info shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-church me-2"></i>Wards</h5>
                <p class="card-text fs-4">@Model.TotalWards</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-warning shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-layer-group me-2"></i>Catechism Groups</h5>
                <p class="card-text fs-4">@Model.TotalGroups</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-bullhorn me-2"></i>Recent Announcements</h5>
                @if (User.IsInRole(UserRoles.Admin))
                {
                    <a asp-area="Admin" asp-controller="Announcements" asp-action="Index" class="btn btn-sm btn-outline-secondary">View All</a>
                }
            </div>
            <div class="card-body">
                @if (!Model.RecentAnnouncements.Any())
                {
                    <p class="text-muted">No recent announcements.</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var announcement in Model.RecentAnnouncements)
                        {
                            <li class="list-group-item">
                                <strong>@announcement.Title</strong>
                                <small class="d-block text-muted">@announcement.PostedDate.ToString("dd MMM yyyy") by @announcement.AuthorName</small>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Upcoming Events</h5>
                @if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.HeadTeacher))
                {
                    <a asp-area="Catechism" asp-controller="GroupActivities" asp-action="Index" class="btn btn-sm btn-outline-secondary">View All</a>
                }
            </div>
            <div class="card-body">
                @if (!Model.UpcomingEvents.Any())
                {
                    <p class="text-muted">No upcoming events.</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var evt in Model.UpcomingEvents)
                        {
                            <li class="list-group-item">
                                <strong>@evt.Name</strong> (@evt.GroupName)
                                <small class="d-block text-muted">@evt.Date.ToString("dd MMM yyyy") - @evt.Points points</small>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>