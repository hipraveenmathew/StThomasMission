@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";

}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-address-book me-2"></i>Contact Us</h3>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-12">
                    <h4 class="mb-3">Get in Touch</h4>
                    <p>
                        We’d love to hear from you! Whether you have questions about our programs, want to join our community, or need assistance, please reach out to us.
                    </p>
                </div>
                <div class="col-12 col-md-6">
                    <h5 class="mb-3">Parish Office</h5>
                    <p>
                        <i class="fas fa-map-marker-alt me-2"></i>St. Thomas Mission Parish<br />
                        [Street Address], [City], [State] [Zip Code]
                    </p>
                    <p>
                        <i class="fas fa-phone me-2"></i><a href="tel:+1234567890">+1 (234) 567-890</a>
                    </p>
                    <p>
                        <i class="fas fa-envelope me-2"></i><a href="mailto:info@stthomasmission.org">info@stthomasmission.org</a>
                    </p>
                </div>
                <div class="col-12 col-md-6">
                    <h5 class="mb-3">Office Hours</h5>
                    <p>
                        Monday - Friday: 9:00 AM - 5:00 PM<br />
                        Saturday: 10:00 AM - 2:00 PM<br />
                        Sunday: Closed
                    </p>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Home</a>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="contactToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Contact Page Status</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Handle TempData feedback with toast notifications
        @if (TempData["Success"] != null)
        {
            <text>
                    var toast = new bootstrap.Toast(document.getElementById('contactToast'));
                    $("#contactToast .toast-body").text("@TempData["Success"]");
                    $("#contactToast .toast-header").removeClass("bg-danger").addClass("bg-success");
                    toast.show();
            </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>
                    var toast = new bootstrap.Toast(document.getElementById('contactToast'));
                    $("#contactToast .toast-body").text("@TempData["Error"]");
                    $("#contactToast .toast-header").removeClass("bg-success").addClass("bg-danger");
                    toast.show();
            </text>
        }
        });
    </script>
}