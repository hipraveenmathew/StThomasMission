@model StThomasMission.Web.Models.ContactViewModel
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-address-book me-2"></i>Contact Us</h3>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-12">
                    <h4 class="mb-3">Get in Touch</h4>
                    <p>
                        We’d love to hear from you! Whether you have questions about our programs, want to join our community, or need assistance, please reach out to us.
                    </p>
                </div>
                <div class="col-12 col-md-6">
                    <h5 class="mb-3">Parish Office</h5>
                    <p>
                        <i class="fas fa-map-marker-alt me-2"></i>@Model.AddressLine1<br />
                        <span class="ms-4">@Model.City, @Model.PostCode</span>
                    </p>
                    <p>
                        <i class="fas fa-phone me-2"></i><a href="tel:@Model.PhoneNumber">@Model.PhoneNumberFormatted</a>
                    </p>
                    <p>
                        <i class="fas fa-envelope me-2"></i><a href="mailto:@Model.EmailAddress">@Model.EmailAddress</a>
                    </p>
                </div>
                <div class="col-12 col-md-6">
                    <h5 class="mb-3">Office Hours</h5>
                    <p>
                        Monday - Friday: 9:00 AM - 5:00 PM<br />
                        Saturday: 10:00 AM - 2:00 PM<br />
                        Sunday: Closed
                    </p>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12">
                    <iframe src="@Model.GoogleMapsEmbedUrl" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Home</a>
            </div>
        </div>
    </div>
</div>