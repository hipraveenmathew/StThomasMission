@model StThomasMission.Web.Models.EventsViewModel

@{
    ViewData["Title"] = "Announcements";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";

}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-bullhorn me-2"></i>Announcements</h3>
        </div>
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!Model.Announcements.Any())
            {
                <div class="alert alert-info text-center" role="alert">
                    No active announcements found.
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var announcement in Model.Announcements)
                    {
                        <div class="col-12">
                            <div class="card border-light shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">@announcement.Title</h5>
                                    <p class="card-text">@announcement.Description</p>
                                    <p class="card-text text-muted">
                                        <small>
                                            Posted on @(announcement.PostedDate != default ? announcement.PostedDate.ToString("yyyy-MM-dd HH:mm") : "N/A")
                                            by @(string.IsNullOrEmpty(announcement.CreatedBy) ? "N/A" : announcement.CreatedBy)
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Home</a>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="eventsToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Announcements Status</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Handle TempData feedback with toast notifications
        @if (TempData["Success"] != null)
        {
            <text>
                    var toast = new bootstrap.Toast(document.getElementById('eventsToast'));
                    $("#eventsToast .toast-body").text("@TempData["Success"]");
                    $("#eventsToast .toast-header").removeClass("bg-danger").addClass("bg-success");
                    toast.show();
            </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>
                    var toast = new bootstrap.Toast(document.getElementById('eventsToast'));
                    $("#eventsToast .toast-body").text("@TempData["Error"]");
                    $("#eventsToast .toast-header").removeClass("bg-success").addClass("bg-danger");
                    toast.show();
            </text>
        }
        });
    </script>
}