@model StThomasMission.Web.Models.EventsViewModel

@{
    ViewData["Title"] = "Announcements";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-bullhorn me-2"></i>Announcements</h3>
        </div>
        <div class="card-body">
            @if (!Model.Announcements.Any())
            {
                <div class="alert alert-info text-center" role="alert">
                    There are no active announcements at this time.
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var announcement in Model.Announcements)
                    {
                        <div class="list-group-item list-group-item-action flex-column align-items-start mb-3 border shadow-sm">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@announcement.Title</h5>
                                <small class="text-muted">@announcement.PostedDateFormatted</small>
                            </div>
                            <p class="mb-1">@announcement.Description</p>
                            <small class="text-muted">Posted by @announcement.AuthorName</small>
                        </div>
                    }
                </div>
            }

            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Home</a>
            </div>
        </div>
    </div>
</div>