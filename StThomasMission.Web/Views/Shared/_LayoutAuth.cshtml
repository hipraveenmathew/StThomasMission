<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>@ViewData["Title"] - St. Thomas Mission</title>

    <!-- Bootstrap & Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to bottom right, #f8f9fa, #e9ecef);
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: white;
            box-shadow: 0 1px 6px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 1.4rem;
            color: #1e40af !important;
        }

            .navbar-brand:hover {
                color: #2563eb !important;
            }

            .navbar-brand img {
                height: 35px;
                margin-right: 0.5rem;
            }

        main {
            flex: 1 0 auto;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 1rem 0;
            font-size: 0.9rem;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <!-- Top Bar -->
    <header>
        <nav class="navbar navbar-light px-3">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="Logo"> St. Thomas Mission
            </a>
            <a class="btn btn-outline-primary btn-sm" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home me-1"></i> Home
            </a>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        &copy; 2025 - St. Thomas Mission
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
