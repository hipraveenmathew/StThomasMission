<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>@ViewData["Title"] - St. Thomas Mission</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #1e40af;
            --primary-hover: #2563eb;
            --text-color: #333;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to bottom right, #f8f9fa, #e9ecef);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            font-size: 16px;
        }

        h1, h2, h3, h4, h5 {
            font-family: 'Playfair Display', serif;
            margin-bottom: 1rem;
        }

        /* Navbar */
        .navbar {
            background-color: white;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            padding: 0.5rem 1rem;
        }

        .navbar-brand {
            font-size: clamp(1.2rem, 4vw, 1.4rem);
            color: var(--primary-color) !important;
            font-weight: 700;
            display: flex;
            align-items: center;
            padding: 0.5rem;
        }

            .navbar-brand:hover {
                color: var(--primary-hover) !important;
            }

            .navbar-brand img {
                height: clamp(30px, 8vw, 35px);
                margin-right: 0.5rem;
            }

        .nav-link {
            color: var(--primary-color) !important;
            font-weight: 500;
            padding: 0.75rem 1rem !important;
            font-size: clamp(0.9rem, 3vw, 1rem);
            position: relative;
            touch-action: manipulation;
        }

            .nav-link:hover {
                color: var(--primary-hover) !important;
            }

            .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: 0;
                left: 0;
                background-color: var(--primary-hover);
                transition: width 0.3s ease;
            }

            .nav-link:hover::after {
                width: 100%;
            }

        .navbar-nav {
            gap: 0.5rem;
        }

        .navbar-toggler {
            border: none;
            padding: 0.5rem;
        }

        /* Main */
        main {
            flex: 1;
            padding-bottom: 2rem;
        }

        /* Footer */
        footer {
            background-color: var(--primary-color);
            color: white;
            padding: 1.5rem 1rem;
            font-size: clamp(0.85rem, 2.5vw, 0.95rem);
        }

            footer a {
                color: #93c5fd;
                text-decoration: none;
                transition: color 0.3s;
            }

                footer a:hover {
                    color: white;
                }

            footer .social-icons a {
                font-size: 1.2rem;
                margin: 0 0.75rem;
            }

        /* Animations */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes bounceIn {
            0%

        {
            transform: scale(0.8);
            opacity: 0;
        }

        50% {
            transform: scale(1.05);
            opacity: 1;
        }

        100% {
            transform: scale(1);
        }

        }

        .animate-fadeIn {
            animation: fadeIn 0.8s ease-out;
        }

        .animate-bounceIn {
            animation: bounceIn 0.6s ease-out;
        }

        /* Mobile-first Media Queries */
        @@media (min-width: 576px) {
            .navbar-brand

        {
            font-size: clamp(1.3rem, 3vw, 1.5rem);
        }

        footer {
            padding: 2rem 1.5rem;
        }

        }

        @@media (min-width: 768px) {
            .navbar

        {
            padding: 1rem 2rem;
        }

        .nav-link {
            padding: 0.5rem 1.25rem !important;
        }

        footer .container {
            max-width: 720px;
        }

        }

        @@media (min-width: 992px) {
            .navbar-brand img

        {
            height: 40px;
        }

        .nav-link {
            font-size: 1.1rem;
        }

        footer .container {
            max-width: 960px;
        }

        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="St. Thomas Logo" class="me-2"> St. Thomas Mission
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <div class="social-icons mb-3">
                <a href="#" class="mx-2"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="mx-2"><i class="fab fa-twitter"></i></a>
                <a href="#" class="mx-2"><i class="fab fa-instagram"></i></a>
                <a href="#" class="mx-2"><i class="fab fa-youtube"></i></a>
            </div>
            <p class="mb-0">
                © 2025 - St. Thomas Mission, Manchester |
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a><br />
                Mission Director: Fr. Jose Kunnumpuram<br />
                St. Antony's Church, Dunkery Road, Wythenshawe, M22 0WR
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>